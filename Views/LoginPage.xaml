<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Profinder_1._0.Views.LoginPage"
             Title="Iniciar sesión">

    <!-- 🧱 Contenedor principal con alineación central -->
    <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- 👤 Campo de usuario -->
        <Entry x:Name="UsernameEntry"
               Placeholder="Usuario"
               TextColor="Black"
               PlaceholderColor="Gray"
               FontSize="18"
               WidthRequest="250" />

        <!-- 🔒 Campo de contraseña -->
        <Entry x:Name="PasswordEntry"
               Placeholder="Contraseña"
               IsPassword="True"
               TextColor="Black"
               PlaceholderColor="Gray"
               FontSize="18"
               WidthRequest="250" />

        <!-- 🟦 Botón para iniciar sesión -->
        <Button Text="Iniciar sesión"
                x:Name="LoginButton"
                BackgroundColor="#007AFF"
                TextColor="White"
                FontSize="18"
                WidthRequest="250"
                Clicked="OnLoginClicked" />

        <!-- ❓ Texto para recuperar contraseña -->
        <Label Text="¿Olvidaste tu contraseña?"
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Center" />

        <!-- 🆕 Botón para registro -->
        <Button Text="Registrarse"
                x:Name="RegisterButton"
                BackgroundColor="#34C759"
                TextColor="White"
                FontSize="18"
                WidthRequest="250"
                Clicked="OnRegisterClicked" />



    </VerticalStackLayout>
</ContentPage>